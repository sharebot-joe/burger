<h1>Eat da Burger!</h1>

<h2>Type da Burger! Eat da Burger!</h2>

<h1>Add da Burger!</h1>
  
<h3>Enter a burger you wish to devour!</h3>

<form action="/" method="POST">
  <textarea type="text" name="burger"></textarea>

  <button id="new-burger" type="submit">Submit</button>
</form>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <div data-id="{{this.id}}" data-devoured="false">>
      <p>{{this.burger_name}}</p>
      <button class="devour" type="button" >Devour It!</button>
    </div>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{this.burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>

